// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 0,
      "padding": 7,
      "min_column": 0,
      "show_commit_summary": false
    }
  },
  "ui_font_family": "Cal Sans UI",
  "buffer_font_family": "FantasqueSansM Nerd Font",
  "ui_font_size": 16.0,
  "buffer_font_size": 16,
  "base_keymap": "VSCode",
  "agent": {
    "inline_assistant_model": {
      "provider": "ollama",
      "model": "athena:latest"
    },
    "default_profile": "ask",
    "model_parameters": [
      {
        "model": "athena:latest",
        "temperature": 0.9
      }
    ],
    "default_model": {
      "provider": "google",
      "model": "gemini-3-pro-preview"
    }
  },
  "language_models": {
    "ollama": {
      "available_models": [
        {
          "name": "athena:latest",
          "max_tokens": 65536,
          "display_name": "Athena",
          "supports_tools": true
        }
      ]
    }
  },
  "icon_theme": "Material Icon Theme",
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "terminal": { "dock": "bottom" },
  "soft_wrap": "editor_width",
  "theme": {
    "mode": "system",
    "light": "Flexoki Light",
    "dark": "Flexoki Dark"
  },
  "languages": {
    "Typst": {
      "formatter": {
        "external": {
          "command": "typstyle"
        }
      }
    },
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["uv", "ruff", "pyright"]
    }
  }
}
